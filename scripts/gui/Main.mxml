<?xml version="1.0" encoding="utf-8"?>
<s:Application
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	creationComplete="onCreationComplete(event)"
	frameRate="8">

	<fx:Script source="source/application.as" />
	
	<s:Group width="100%" height="100%">
		<s:layout>
			<s:VerticalLayout
				horizontalAlign="justify"
				paddingTop="8"
				paddingBottom="8"
				paddingLeft="8"
				paddingRight="8" />
		</s:layout>
		
		<s:Group width="100%">
			<s:layout>
				<s:HorizontalLayout />
			</s:layout>
			
			<s:Button
				id="btnNew"
				icon="@Embed('assets/File.png')"
				click="onBtnNewClicked(event)"
				width="32"
				height="32" />
			
			<s:Button
				id="btnLoad"
				icon="@Embed('assets/Open Folder.png')"
				click="onBtnLoadClicked(event)"
				width="32"
				height="32" />
		</s:Group>
		
		<mx:Tree
			id="treSolution"
			labelField="@label"
			showRoot="true"
			dataProvider="{_solutionTreeData.node}" 
			height="100%" />
		
		<s:Group width="100%">
			<s:layout>
				<s:HorizontalLayout />
			</s:layout>
			
			<s:Button
				id="btnCheck"
				icon="@Embed('assets/Search.png')"
				click="onBtnCheckClicked(event)"
				width="32"
				height="32" />
			
			<s:Button
				id="btnBuild"
				icon="@Embed('assets/Hammer.png')"
				click="onBtnBuildClicked(event)"
				width="32"
				height="32" />
		</s:Group>
	</s:Group>

</s:Application>